---
import { Image } from "astro:assets";

interface Astro {
  props: {
    title: string;
    category: string;
    to: string;
    img: {
      src: string;
      alt: string;
    };
  };
}

const { to, img, title, category } = Astro.props;
---

<a href={to} data-category={category}>
  <h2>{title}</h2>
  <Image src={img.src} alt={img.alt} />
</a>

<style lang="scss">
  @use "../lib/scss/variables" as v;

  a {
    position: relative;
    grid-column: span 4;
    aspect-ratio: 1;
    overflow: hidden;

    &:hover {
      img {
        filter: saturate(1) blur(1px) brightness(0.8);
        // transform: scale(1.02);
      }
      h2 {
        opacity: 1;
      }
    }
  }
  h2 {
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    transition-delay: 25ms;
    position: absolute;
    z-index: 1;
    left: 50%;
    width: 100%;
    font-weight: 700;
    top: 50%;
    font-size: 2rem;
    text-align: center;
    transform: translate(-50%, -50%);
    color: v.$c-white;
    font-family: v.$ff-inter;
    text-shadow: 0 0 1rem v.$c-black;
  }
  img {
    transform: scale(1.01);
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0);
    transition: filter 0.5s ease-in-out;
  }
</style>
