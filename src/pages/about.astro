---
import Link from "@components/Link.astro";
import StarShape from "@components/StarShape.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="baptistejouin | about me" page="about">
  <div class="row">
    <main class="wrapper">
      <h1 transition:name="title">about me</h1>
      <p>
        I am currently a student in Paris at <span class="underline"
          ><a href="https://www.ingenieur-imac.fr">IMAC</a></span
        >, an engineering school focused on careers in <span class="underline"
          ><a href="/works">image, sound, and programming</a></span
        >. I am passionate about the web, art, design, and UX/UI. I am also a
        big fan of music and cinema.
      </p>

      <div class="resume">
        <Link href="/file/Baptiste JOUIN.pdf" download>
          <span>my résumé</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="33"
            height="32"
            fill="none"
            ><path
              d="M17.583 13.333h6.667l-8 8-8-8h6.667V4h2.666v9.333Zm-12 12h21.334V16h2.666v10.667A1.333 1.333 0 0 1 28.25 28h-24a1.334 1.334 0 0 1-1.333-1.333V16h2.666v9.333Z"
            ></path></svg
          >
        </Link>
      </div>
    </main>
  </div>
  <StarShape offsetY={20} side="left" />
</Layout>

<style lang="scss">
  @use "@lib/scss/variables" as v;
  @use "@lib/scss/mixins" as m;

  h1 {
    font-size: 3.5rem;
    font-family: v.$ff-jetbrains;
    margin: 5rem 0 3.5rem 0;
    width: 100%;
  }
  main {
    display: flex;
    flex-direction: column;
    min-height: 60svh;
  }

  .resume {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 2.5rem 0;
    span {
      font-size: 1.75781rem;
      font-family: v.$ff-jetbrains;

      @include m.before(lg) {
        font-size: 1.35rem;
      }
    }
    svg {
      fill: var(--dark-900);
    }
  }

  p {
    font-family: v.$ff-inter;
    font-size: 2.8125rem;
    color: var(--dark-900);

    @include m.before(lg) {
      font-size: 2.5rem;
    }
    @include m.before(md) {
      font-size: 2rem;
    }
  }
</style>
